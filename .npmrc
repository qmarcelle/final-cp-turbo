# .npmrc
# Improve performance by skipping post-install scripts for dev dependencies
ignore-workspace-root-check=true
# Use strict linking to ensure better monorepo hygiene
strict-peer-dependencies=false
# Enable hoisting to reduce duplicates
shamefully-hoist=true
# Provide better error messages
save-workspace-protocol=false
# Reduce duplication when possible
resolution-mode=highest
# Add to your package.json scripts
"install:fast": "pnpm install --network-concurrency=16 --child-concurrency=16"

cache-dir=.pnpm-cache
prefer-offline=true

auto-install-peers=true
node-linker=hoisted
