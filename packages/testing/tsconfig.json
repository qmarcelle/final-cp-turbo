{
  // Testing package TypeScript configuration
  // Provides testing utilities and configurations for the monorepo
  "extends": "../../packages/typescript-config/tsconfig/react-library.json",
  "compilerOptions": {
    // Basic compiler options for the testing package
    "baseUrl": ".",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/*.cy.ts"]
} 