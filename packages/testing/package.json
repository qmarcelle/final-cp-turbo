{
  "name": "@portals/testing",
  "version": "1.0.0",
  "private": true,
  "description": "Shared testing utilities for consumer portals.",
  "keywords": ["testing", "jest", "cypress", "monorepo"],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "typecheck": "tsc --noEmit --pretty",
    "build": "tsup src/index.ts --format cjs,esm && tsc --project tsconfig.json --emitDeclarationOnly --outDir dist"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "next": "^15.0.0",
    "@testing-library/react": "^16.0.0",
    "msw": "^2.0.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*"
  },
  "devDependencies": {
    "@portals/typescript-config": "workspace:*",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "msw": "^2.0.0",
    "next": "^15.0.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "@testing-library/jest-dom": "^6.4.2"
  }
}
