{
  "name": "@portals/testing",
  "version": "0.1.0",
  "description": "Shared testing utilities for Consumer Portals applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "UNLICENSED",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
