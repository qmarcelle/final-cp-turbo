{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "CommonJS",
    "types": ["node", "jest", "@testing-library/jest-dom", "@jest/globals"],
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "jest.setup.ts"
  ]
} 