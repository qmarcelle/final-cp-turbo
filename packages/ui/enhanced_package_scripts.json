{
  "name": "@portals/ui",
  "version": "1.0.0",
  "private": false,
  "description": "Enterprise component library built on shadcn/ui for BCBST portal applications",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./globals.css": "./src/styles/globals.css",
    "./tailwind-preset": "./src/lib/tailwind-preset.js",
    "./components/*": {
      "types": "./src/components/*/index.d.ts",
      "import": "./src/components/*/index.js",
      "default": "./src/components/*/index.tsx"
    },
    "./lib/*": {
      "types": "./src/lib/*/index.d.ts", 
      "import": "./src/lib/*/index.js",
      "default": "./src/lib/*/index.ts"
    },
    "./hooks/*": {
      "types": "./src/hooks/*/index.d.ts",
      "import": "./src/hooks/*/index.js", 
      "default": "./src/hooks/*/index.ts"
    }
  },
  "scripts": {
    "build": "turbo run build:components build:types build:css",
    "build:components": "tsup",
    "build:types": "tsc --build",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/globals.css --minify",
    
    "dev": "turbo run dev:components dev:storybook --parallel",
    "dev:components": "tsup --watch",
    "dev:storybook": "storybook dev -p 6006",
    
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "test-storybook",
    
    "ui:add": "pnpm dlx shadcn@latest add",
    "ui:add-all": "pnpm dlx shadcn@latest add -a -y -o",
    "ui:init": "pnpm dlx shadcn@latest init",
    "ui:manage": "tsx scripts/manage-radix-versions.ts",
    "ui:update": "for file in src/components/ui/*.tsx; do pnpm dlx shadcn@latest add -y -o $(basename \"$file\" .tsx); done",
    "ui:registry": "pnpm ui:manage registry",
    "ui:validate": "pnpm ui:manage validate",
    
    "format": "prettier --write \"src/**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,md,json}\"",
    
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "reset": "pnpm clean && rm -rf node_modules && pnpm install",
    
    "analyze": "turbo run analyze",
    "bundle-analyzer": "ANALYZE=true pnpm build",
    
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm lint && pnpm build",
    
    "gen:component": "turbo gen react-component",
    "gen:hook": "turbo gen react-hook"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "catalog:",
    "@radix-ui/react-alert-dialog": "catalog:",
    "@radix-ui/react-aspect-ratio": "catalog:",
    "@radix-ui/react-avatar": "catalog:", 
    "@radix-ui/react-checkbox": "catalog:",
    "@radix-ui/react-collapsible": "catalog:",
    "@radix-ui/react-dialog": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-hover-card": "catalog:",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-menubar": "catalog:",
    "@radix-ui/react-navigation-menu": "catalog:",
    "@radix-ui/react-popover": "catalog:",
    "@radix-ui/react-progress": "catalog:",
    "@radix-ui/react-radio-group": "catalog:",
    "@radix-ui/react-scroll-area": "catalog:",
    "@radix-ui/react-select": "catalog:",
    "@radix-ui/react-separator": "catalog:",
    "@radix-ui/react-sheet": "catalog:",
    "@radix-ui/react-slider": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@radix-ui/react-switch": "catalog:",
    "@radix-ui/react-tabs": "catalog:",
    "@radix-ui/react-toast": "catalog:",
    "@radix-ui/react-toggle": "catalog:",
    "@radix-ui/react-toggle-group": "catalog:",
    "@radix-ui/react-tooltip": "catalog:",
    "class-variance-authority": "^0.7.0",
