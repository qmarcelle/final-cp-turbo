{
  // UI package TypeScript configuration
  // Provides shared UI components and design system
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".", // Base URL for path resolution
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["./src/*"],
      "@portals/shared-types/*": ["../shared-types/src/*"]
    },
    "typeRoots": [
      "../../node_modules/.pnpm/@types",
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "docs/react19_component_patterns.ts"
  ]
} 