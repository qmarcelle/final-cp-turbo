{
  // UI package TypeScript configuration
  // Provides shared UI components and design system
  "extends": "../../packages/typescript-config/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".", // Base URL for path resolution
    // outDir, rootDir, composite, tsBuildInfoFile, emitDeclarationOnly are handled by react-library.json and tsup
    // moduleResolution will be "bundler" from base.json via react-library.json
    "types": ["node", "jest"], // Keep specific types
    "skipLibCheck": true, // Already in base.json, but explicit here is fine
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "../../node_modules/.pnpm/@types",
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
} 