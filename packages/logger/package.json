{
  "name": "@cp/logger",
  "version": "0.1.0",
  "description": "Shared logging utilities for consumer portal applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "jest",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@cp/tsconfig": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/react": "^19.0.10",
    "@types/testing-library__jest-dom": "^6.0.0",
    "eslint": "^9.22.0",
    "eslint-config-custom": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "next-auth": "^5.0.0-beta.4"
  }
}