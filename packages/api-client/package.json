{
  "name": "@portals/api-client",
  "version": "0.1.0",
  "private": true,
  "description": "API client for accessing backend services in the portals monorepo.",
  "main": "./dist/index.js",
  "module": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/mocks.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/mocks.ts --format esm,cjs --dts --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "pnpm exec rimraf dist .turbo node_modules",
    "docs:generate": "typedoc --out docs src/index.ts"
  },
  "dependencies": {
    "@microsoft/applicationinsights-web": "^3.0.0",
    "msw": "^2.9.0",
    "xml-js": "^1.6.11",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/xml-js": "^1.0.0",
    "@portals/tsconfig": "workspace:*",
    "eslint": "^8.57.1",
    "@portals/eslint-config": "workspace:*",
    "jest": "^29.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.0",
    "tsup": "^8.4.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks.d.ts",
      "import": "./dist/mocks.mjs",
      "require": "./dist/mocks.js"
    }
  },
  "sideEffects": false
}
