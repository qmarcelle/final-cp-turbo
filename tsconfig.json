{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@features/*": ["./src/features/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@styles/*": ["./src/styles/*"],
      "@portals/ui/*": ["./packages/ui/src/*"],
      "@portals/utils/*": ["./packages/utils/src/*"],
      "@portals/logger/*": ["./packages/logger/src/*"],
      "@portals/testing/*": ["./packages/testing/src/*"],
      "@portals/auth/*": ["./packages/auth/src/*"],
      "@portals/types/*": ["./packages/types/src/*"],
      "@portals/tsconfig/*": ["./packages/tsconfig/*"]
    },
    "types": ["node"],
    "typeRoots": [
      "./node_modules/.pnpm/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "src/types/**/*.d.ts"]
}
