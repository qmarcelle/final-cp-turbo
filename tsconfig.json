{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./packages/typescript-config/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",

    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@features/*": ["./src/features/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@styles/*": ["./src/styles/*"],
      "@portals/ui/*": ["./packages/ui/src/*"],
      "@portals/testing/*": ["./packages/testing/src/*"],
      "@portals/logger/*": ["./packages/logger/src/*"],
      "@portals/shared-types/*": ["./packages/shared-types/src/*"],
      "@portals/typescript-config/*": ["./packages/typescript-config/*"],
      "@portals/tsconfig/*": ["./packages/tsconfig/*"]
    },
    "types": ["node"],
    "typeRoots": [
      "./node_modules/.pnpm/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "src/types/**/*.d.ts"]
}
