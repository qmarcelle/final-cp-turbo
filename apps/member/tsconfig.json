{
  "extends": "../../packages/typescript-config/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@portals/*": [
        "../../packages/*"
      ] // To help resolve workspace packages
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/auth/src/next-auth.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
