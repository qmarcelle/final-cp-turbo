{
  "name": "consumer-portals",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:packages": "pnpm build:router",
    "dev": "turbo dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:all": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "e2e": "turbo e2e",
    "e2e:headless": "turbo e2e:headless",
    "format": "prettier --write",
    "clean": "pnpm -r exec -- rimraf dist .turbo node_modules && rimraf node_modules",
    "clean:install": "pnpm clean && pnpm install",
    "install:fast": "pnpm install --network-concurrency=16 --child-concurrency=16",
    "install:ci": "pnpm install --frozen-lockfile",
    "docs": "turbo build --filter=@cp/docs",
    "check-types": "turbo check-types",
    "analyze": "turbo analyze",
    "prune": "turbo prune",
    "gen:workspace": "turbo gen workspace",
    "build:ui": "cd packages/ui && pnpm build"
  },
  "devDependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^4.1.3",
    "@jest/globals": "^29.7.0",
    "@turbo/gen": "^2.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.1",
    "eslint": "^8.57.1",
    "glob": "^11.0.1",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^15.4.3",
    "npm-check-updates": "^17.1.15",
    "prettier": "^3.5.3",
    "react-datepicker": "^8.2.0",
    "react-hook-form": "^7.54.2",
    "react-imask": "^7.6.1",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "overrides": {
      "axios": "^1.8.2",
      "esbuild": "^0.25.0",
      "typescript": "^5.4.2",
      "react": "^18",
      "react-dom": "^18"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "dependencies": {
    "focus-trap-react": "^10.2.3",
    "msw": "^2.7.3",
    "next": "14.2.4",
    "next-auth": "^5.0.0-beta.19",
    "react-gtm-module": "^2.0.11",
    "react-responsive": "^10.0.0",
    "react-responsive-modal": "^6.4.2",
    "zustand": "^4.5.4"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  }
}
