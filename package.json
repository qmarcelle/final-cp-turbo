{
  "name": "consumer-portals",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "build:apps": "turbo build --filter='./apps/*'",
    "dev": "turbo dev",
    "storybook": "pnpm --filter storybook-app storybook",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "e2e": "turbo e2e",
    "e2e:headless": "turbo e2e:headless",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css}\"",
    "clean": "turbo clean && pnpm -r exec -- rimraf node_modules && rimraf node_modules",
    "clean:install": "pnpm clean && pnpm install",
    "clean:cache": "turbo clean && rimraf .turbo",
    "typecheck": "turbo typecheck",
    "prepare": "husky",
    "commit": "cz",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:update": "pnpm update --latest --interactive",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@mdx-js/react": "^3.0.0",
    "@mdx-js/rollup": "^3.1.0",
    "@storybook/addon-docs": "9.0.12",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "lucide-react": "^0.513.0",
    "postcss": "^8.4.32",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.2",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.5",
    "react-day-picker": "^9.7.0",
    "zod": "^3.25.55"
  },
  "engines": {
    "node": "^20.11.0",
    "pnpm": "10.5.2"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0",
      "typescript": "5.8.2",
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "@storybook/addon-docs": "9.0.12",
      "@storybook/addon-themes": "9.0.12",
      "@storybook/blocks": "9.0.12",
      "@storybook/react": "9.0.12",
      "@storybook/react-vite": "9.0.12",
      "storybook": "9.0.12"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
