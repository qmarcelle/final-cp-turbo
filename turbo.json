{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$", 
        ".env.local",
        "!README.md"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "e2e": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "ui:update": {
      "cache": false,
      "dependsOn": ["ui:add"]
    },
    "sitecore:build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "sitecore/**"
      ],
      "outputs": ["sitecore/dist/**"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/storybook/storybook-static/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/storybook/.storybook/**",
        "packages/ui/src/**/*.stories.@(js|jsx|mjs|ts|tsx)",
        "packages/ui/src/**/*.@(js|jsx|mjs|ts|tsx)"
      ]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "PORT",
    "NEXT_PUBLIC_*"
  ]
}