{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*local", "global-config.json"],
  "globalEnv": ["NODE_ENV", "CI", "VERCEL", "PORT", "NEXT_PUBLIC_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "persistent": false
    },
    "@portals/types#build": {
      "outputs": ["dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "**/.eslintrc.*", "**/eslint.config.*"]
    },
    "lint:fix": {
      "outputs": [],
      "cache": false,
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "**/.eslintrc.*", "**/eslint.config.*"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}", "__tests__/**/*.{ts,tsx}", "jest.config.*", "package.json"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "e2e": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "e2e:headless": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "check-types": {
      "cache": true,
      "inputs": ["src/**/*.{ts,tsx}", "**/tsconfig*.json"],
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": true,
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css}", ".prettierrc*", "prettier.config.*"]
    },
    "format:check": {
      "cache": true,
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css}", ".prettierrc*", "prettier.config.*"]
    }
  }
}
