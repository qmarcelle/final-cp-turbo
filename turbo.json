{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/.eslintrc.*",
        "**/eslint.config.*"
      ]
    },
    "lint:fix": {
      "outputs": [],
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/.eslintrc.*",
        "**/eslint.config.*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "e2e": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "e2e:headless": {
      "dependsOn": [
        "^build"
      ]
    },
    "check-types": {
      "cache": true,
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/tsconfig*.json"
      ]
    },
    "security:audit": {
      "cache": false
    },
    "perf:analyze": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "PORT",
    "NEXT_PUBLIC_*"
  ]
}
