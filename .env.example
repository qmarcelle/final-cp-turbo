# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local for development
# Never commit actual .env files with real values
#
# Follow the naming convention: NEXT_PUBLIC_ for client-side variables
# Use UPPER_CASE_WITH_UNDERSCORES for all environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED ENVIRONMENT VARIABLES
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Backend API base URL
API_BASE_URL=https://api.dev.portals.bcbst.com
# API timeout in milliseconds
API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# JWT secret for token validation
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Session timeout in seconds
SESSION_TIMEOUT=3600
# OAuth provider configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/portals_dev
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-key

# Monitoring
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn

# -----------------------------------------------------------------------------
# AZURE SERVICES
# -----------------------------------------------------------------------------
# Azure Storage for file uploads
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER_NAME=portal-uploads

# Azure Key Vault for secrets
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable features
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=false
NEXT_PUBLIC_FEATURE_BETA_SEARCH=true
NEXT_PUBLIC_FEATURE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# Enable debug logging
DEBUG=portals:*
# Bundle analyzer
ANALYZE=false
# Skip build optimization for faster dev builds
SKIP_BUILD_OPTIMIZATION=true

# -----------------------------------------------------------------------------
# CORPORATE PROXY SETTINGS
# -----------------------------------------------------------------------------
# BCBST Corporate proxy configuration
# These are automatically configured by setup scripts but can be overridden
HTTP_PROXY=http://webproxy.bcbst.com:80
HTTPS_PROXY=https://webproxy.bcbst.com:443
NO_PROXY=localhost,127.0.0.1,*.bcbst.com

# -----------------------------------------------------------------------------
# PERFORMANCE & CACHING
# -----------------------------------------------------------------------------
# Redis for caching
REDIS_URL=redis://localhost:6379
# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.portals.bcbst.com

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://dev.portals.bcbst.com
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 